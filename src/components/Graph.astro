  display: grid;
  grid-template-columns: repeat(12, 1fr);
  grid-template-rows: repeat(100, 1fr);
  grid-column-gap: 5px;
  height: 20vh;
  width: 70vw;
  padding: 5px 10px;
}

[class*=bar] {
