---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Sidebar from '../components/Sidebar.astro';
---

<Layout title="Welcome to Astro.">
	<main>
		<Sidebar />
		<br>
		<br>
		<h7>Tomorrow's Menu</h7>
		<br>
		<br>
		<h3><i>Please select your food options for tomorrow.</i></h3>
		<br>
		<br>
		<h8>Breakfast:</h8>
		<br>
		<p>Option 1:</p>
		<br>
	<p>Scrambled eggs and toast</p>
		<br>
<p>Option 2:</p>
		<br>
		<p>Bran muffin with jam</p>
		<br>
		<br>
		<h8>Lunch:</h8>
		<br>
		<p>Option 1:</p>
		<br>
	<p>Curry mince and rice</p>
		<br>
<p>Option 2:</p>
		<br>
		<p>Lamb stew with vegetables</p>
		<br>
		<br>
		<h8>Dinner:</h8>
		<br>
		<p>Option 1:</p>
		<br>
	<p>Cheese and Fruit board</p>
		<br>
<p>Option 2:</p>
		<br>
		<p>Spinach and Feta pastry</p>
		<br>
		<br>
		<a href="/dashboard"><button>Save</button></a>
	</main>
</Layout>

<style>
	main {
		padding: 0px ;
		width: 800px;
		max-width: calc(100% - 2rem);
		font-size: 20px;
		line-height: 1.6;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	h2 {
    font-size: 2rem;
    font-weight: 700;
    line-height: 1;
    text-align: left;
    margin-bottom: 1em;
  }
  h3 {
    font-size: 1.5rem;
    font-weight: 500;
    line-height: 1;
    text-align: left;
    margin-bottom: 1em;
  }
  h7 {
    font-size: 2.5rem;
    font-weight: 600;
    color: #2200b6;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
  h8 {
    font-size: 1.5rem;
    font-weight: 600;
    color: #2200b6;
    line-height: 1;
    text-align: left;
    margin-bottom: 1em;
  }
  h9 {
    font-size: 1.5rem;
    font-weight: 600;
    color: #2200b6;
    line-height: 1;
    text-align: left;
    margin-bottom: 1em;
  }
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
