---
import Layout from '../layouts/Layout.astro';
import Sidebar from '../components/Sidebar.astro';
---

<script>
	document.getElementById("today")!.innerHTML += 
	new Date().toLocaleDateString('en-za', { weekday:"long", year:"numeric", month:"short", day:"numeric"})	;
</script>

<Layout title="My Classes">
	<main>
		<Sidebar />
		<br>
		<br>
		<h7>My classes today:</h7>
		<br>
		<br>
		<h8><i>You will receive a notification 10 minutes before each class start.  If you don't want any group class notifications, please select this radio button.</i></h8>
		<br>
		<br>
		<p>Today is, <i id="today"></i>. You are in the blue week. Your classes for today are:</p>
		<br>
		<p>Gym, stating at 07:00</p>
		<br>
		<p>More conscious Boundaries (Hayley Meduric), stating at 11:00</p>
		<br>
		<p>Stress Management (Nadia Joubert), stating at 13:30</p>
		<br>
	</main>
</Layout>

<style>
	main {
		padding: 0px ;
		width: 800px;
		max-width: calc(100% - 2rem);
		font-size: 20px;
		line-height: 1.6;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	h2 {
    font-size: 2rem;
    font-weight: 700;
    line-height: 1;
    text-align: left;
    margin-bottom: 1em;
  }
  h3 {
    font-size: 1.5rem;
    font-weight: 500;
    line-height: 1;
    text-align: left;
    margin-bottom: 1em;
  }
  h7 {
    font-size: 2.5rem;
    font-weight: 600;
    color: #2200b6;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
  h8 {
    font-size: 1.5rem;
    font-weight: 600;
    color: #2200b6;
    line-height: 1;
    text-align: left;
    margin-bottom: 1em;
  }
  h9 {
    font-size: 1.5rem;
    font-weight: 600;
    color: #2200b6;
    line-height: 1;
    text-align: left;
    margin-bottom: 1em;
  }
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
